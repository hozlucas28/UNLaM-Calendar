{
	"endOfLine": "lf",
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"semi": false,
	"singleQuote": false,
	"jsxSingleQuote": false,
	"singleAttributePerLine": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"quoteProps": "consistent",
	"arrowParens": "avoid",
	"objectWrap": "preserve",
	"trailingComma": "none",
	"htmlWhitespaceSensitivity": "ignore",
	"embeddedLanguageFormatting": "auto",
	"plugins": ["prettier-plugin-astro"],
	"overrides": [
		{
			"files": [
				"*.astro"
			],
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": [
				"*.{yml,yaml}",
				"*.mermaid"
			],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": [
				"*.md"
			],
			"options": {
				"tabWidth": 2
			}
		}
	]
}
